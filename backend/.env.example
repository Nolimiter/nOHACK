# ============================================
# nOHACK Backend - Environment Variables
# ============================================

# ----------------
# Database Configuration
# ----------------
# PostgreSQL connection string
# Local: postgresql://username:password@localhost:5432/nohack_db
# Railway: Automatically provided by Railway PostgreSQL addon
DATABASE_URL="postgresql://username:password@localhost:5432/nohack_db"

# ----------------
# Redis Configuration
# ----------------
# Redis connection string for caching and sessions
# Local: redis://localhost:6379
# Railway: Automatically provided by Railway Redis addon
REDIS_URL="redis://localhost:6379"

# ----------------
# Authentication & Security
# ----------------
# JWT Secret key - MUST be at least 32 characters
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-here-make-sure-its-at-least-32-characters-long"

# Bcrypt password hashing rounds (10-12 recommended for production)
BCRYPT_ROUNDS=12

# ----------------
# CORS Configuration
# ----------------
# Frontend URL for CORS policy
# Local: http://localhost:3000
# Production: https://your-app.vercel.app
FRONTEND_URL="http://localhost:3000"

# ----------------
# Server Configuration
# ----------------
# Server port (Railway will override this automatically)
PORT=4000

# Node environment (development, production, test)
NODE_ENV="development"